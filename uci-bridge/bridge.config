# UCI Bridge Configuration - SHREDDER OPTIMIZED
# This config is specifically tuned for Shredder Chess compatibility

# ==============================================
# Serial Port Configuration  
# ==============================================

# COM port where your Pi Pico is connected
port=COM15

# Baud rate - use 115200 for reliability
# Lower rates like 9600 can help with communication issues
baudrate=115200

# CRITICAL: Short timeout for Shredder compatibility
# Shredder expects fast responses, especially for UCI initialization
timeout=3

# ==============================================
# Engine Information (as seen in Shredder)
# ==============================================

engine_name=PicoChess
engine_author=arnisz

# ==============================================
# Debug Settings - ENABLE FOR TROUBLESHOOTING
# ==============================================

# ALWAYS enable debug when testing with Shredder!
debug=true

# Log file for complete communication trace
logfile=shredder-debug.log

# ==============================================
# Shredder-Specific Optimizations
# ==============================================

# Fast UCI response (Shredder requirement)
# uci_timeout=2

# Quick ready check (Shredder requirement)  
# ready_timeout=1

# Move calculation timeout (adjust based on Pi Pico speed)
# move_timeout=30

# ==============================================
# TROUBLESHOOTING CONFIGS
# ==============================================

# If Shredder says "This is not an UCI Engine":
# 1. Ensure debug=true and check logfile
# 2. Verify Pi Pico sends "uciok" response
# 3. Try lower baudrate (9600)
# 4. Increase timeout to 5 or 10

# Alternative settings for slow Pi Pico:
# baudrate=9600
# timeout=10

# Alternative settings for unstable connection:
# baudrate=57600
# timeout=5

# ==============================================
# COMMON CONFIGURATIONS
# ==============================================

# For very fast Pi Pico (advanced users):
# baudrate=230400
# timeout=2

# For slow/debugging Pi Pico:
# baudrate=9600
# timeout=15
# debug=true
# logfile=slow-debug.log

# For production use (no debug overhead):
# debug=false
# # logfile=

# For multiple COM port testing:
# Try these ports in order: COM15, COM14, COM13, COM12
# Check Windows Device Manager for actual port